<html>

<head>
  <title>My Angular App!</title>
  <script src="/lib/angular.min.js"></script>
  <script src="/lib/underscore-min.js"></script>
  <script src="/javascripts/script.min.js"></script>
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.min.css">
</head>

<body ng-app="mainApp" ng-controller="MainCtrl">

  <nav class="header-bar">
    <header>MEAN Systems</header>
  </nav>

  <main>

    <section class="list post-list">

      <header>Posts</header>

      <div class="element post" ng-repeat="post in posts | orderBy: '-upvotes'">

        <div class="title">
          <a ng-show="post.link" href="{{post.link}}">{{post.title}}</a>
          <span ng-hide="post.link">{{post.title}}</span>
        </div>

        <div class="upvotes">
          <span class="label">Upvotes:</span>
          <span class="count">{{post.upvotes}}</span>
          <span class="button" ng-click="incrementUpvotes(post)">+</span>
        </div>

      </div>

      <form ng-submit="addPost()">
        <input type="text" placeholder="Title" ng-model="title"></input>
        <input type="text" placeholder="Link" ng-model="link"></input>
        <button type="submit">Post</button>
      </form>

    </section>

  </main>

</body>

</html>
